# Dockerfile for resonant portal system
FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --only=production

COPY . .

# Install necessary dependencies for media processing
RUN apk add --no-cache \
    ffmpeg \
    python3 \
    make \
    g++ \
    bluez \
    && npm rebuild

EXPOSE 8080 8443 3000

CMD ["node", "dist/main.js"]